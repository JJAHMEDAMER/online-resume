---
import Bidirectional from "../../components/Bidirectional.astro";
import Point from "../../components/Point.astro";

const { position } = Astro.params;
---

<>
  <Bidirectional
    left="Career Studio (Workforce Development Solution)"
    right="Los Angeles (Remote)"
  />
  <Bidirectional
    className="job-title"
    left={position + " Intern"}
    right="June 2023 - Sep 2023"
  />
  <Point
    pointsList={[
      "Worked with designers and backend developers to implement new features and bug fixes.",
      "Communications with project manger",
      "GitHub code review and resolve merge conflicts",
      "Implement and maintain feature requirements using React, Tailwind, Redux ToolKit",
    ]}
  />
</>

<style>
  .job-title {
    font-size: 0.8rem;
    font-weight: 600;
  }
</style>

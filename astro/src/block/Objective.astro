---
import Section from "../layouts/Section.astro";

const route = Astro.url.pathname;

let objective;
if (route === "/communication") {
  objective =
    "To obtain a position in the telecommunications industry where I can use my skills and knowledge to design, implement, and maintain communication systems.";
} else {
  objective =
    "Enthusiastic, results-oriented and hard working Software engineer. Working on different projects helped me adopt to changes quickly and made me a mature team worker. I am able to work well both in a team environment as well as using my own initiative. I am able to work well under pressure and adhere to agreed upon deadlines.";
}

console.log(route);
---

<Section title="Objective">
  <p>{objective}</p>
</Section>
